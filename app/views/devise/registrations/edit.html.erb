<div class="d-flex flex-column min-vh-100 justify-content-center align-items-center p-3" style="gap: 20px; max-width: 500px; margin: auto;">
  <h2 class="text-light mb-3">ðŸ›  Editar Perfil</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="mb-2 w-100">
      <%= f.label :email, "E-mail", class: "text-light" %>
      <%= f.email_field :email, autofocus: true, class: "form-control bg-secondary text-light border-0" %>
    </div>

    <div class="mb-2 w-100">
      <%= f.label :password, "Nova Senha (deixe em branco para manter atual)", class: "text-light" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-secondary text-light border-0" %>
    </div>

    <div class="mb-2 w-100">
      <%= f.label :password_confirmation, "Confirme a Nova Senha", class: "text-light" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-secondary text-light border-0" %>
    </div>

    <div class="mb-2 w-100">
      <%= f.label :current_password, "Senha Atual (obrigatÃ³ria para salvar)", class: "text-light" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control bg-secondary text-light border-0" %>
    </div>

    <%= f.submit "Atualizar Perfil", class: "btn btn-primary w-100" %>
  <% end %>

  <div class="mt-3 w-100 d-flex flex-column gap-2">
    <%= link_to "Voltar para o catÃ¡logo", filmes_path, class: "btn btn-outline-light w-100" %>
  </div>
</div>

